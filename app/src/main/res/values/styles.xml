<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="CardViewTextItem">
        <item name="android:textSize">@dimen/det_textview_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/det_textview_left_padding</item>
        <item name="android:paddingTop">@dimen/item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/item_vertical_padding</item>
    </style>

    <style name="LinearLayoutVerticalMargin">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ListItemEmployeeName" >
        <item name="android:paddingBottom">@dimen/item_vertical_padding</item>
        <item name="android:paddingEnd">@dimen/item_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/item_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/item_vertical_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PrimaryToolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/toolbar_text_color</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color</item >
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--style name="ContextualToolbar" parent="PrimaryToolbar">
        <item name="android:background">@color/contextual_toolbar_color</item>
    </style-->

</resources>
